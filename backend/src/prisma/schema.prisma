generator client {
  provider = "prisma-client-js"
  // output   = "generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  nama         String
  email        String   @unique
  password     String
  no_hp        String
  alamat       String
  rw           Int
  rt           Int
  isAdmin      Int
  refreshToken String? //bisa null
  createdAt    DateTime @default(now())

  muzakiRemark   Remark[] @relation("MuzakiRelation")
  pengurusRemark Remark[] @relation("PengurusRelation")
}

model Remark {
  id Int @id @default(autoincrement())

  muzaki_id            Int
  muzaki               User      @relation("MuzakiRelation", fields: [muzaki_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  pengurus_id          Int?
  pengurus             User?     @relation("PengurusRelation", fields: [pengurus_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  tipe_zakat           TipeZakat
  tanggal_diajukan     DateTime
  tanggal_dikonfirmasi DateTime?
  status               Status    @default(DIAJUKAN)
  isDeleted            Int?
  createdAt            DateTime  @default(now())

  Zakat_uang    Zakat_uang[]
  Zakat_makanan Zakat_makanan[]
  Fidyah        Fidyah[]
  Infaq         Infaq[]
}

model Zakat_uang {
  id        Int      @id @default(autoincrement())
  remark    Remark   @relation(fields: [remark_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  remark_id Int
  nama      String
  hubungan  String
  nisab     Float
  harga     BigInt
  jumlah    BigInt
  createdAt DateTime @default(now())
}

model Zakat_makanan {
  id              Int      @id @default(autoincrement())
  remark_id       Int
  remark          Remark   @relation(fields: [remark_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  tipe            Tipe?
  jumlah_keluarga Int
  nisab           Float
  jumlah          Float
  createdAt       DateTime @default(now())
}

model Fidyah {
  id        Int      @id @default(autoincrement())
  remark_id Int
  remark    Remark   @relation(fields: [remark_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  nisab     Int
  harga     BigInt
  jumlah    BigInt
  createdAt DateTime @default(now())
}

model Infaq {
  id        Int      @id @default(autoincrement())
  remark_id Int
  remark    Remark   @relation(fields: [remark_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  jumlah    BigInt
  createdAt DateTime @default(now())
}

// ENUM
enum Status {
  DIAJUKAN
  SELESAI
  TIDAK_SELESAI
}

enum Tipe {
  BERAS
  GANDUM
}

enum TipeZakat {
  UANG
  MAKANAN
}
